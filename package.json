{
    "name": "@nuvola-digital/opaque-ts",
    "version": "1.0.3",
    "description": "OPAQUE: Asymmetric Password-Authenticated Key Exchange in Typescript",
    "author": "Armando Faz <armfazh@cloudflare.com>",
    "maintainers": [
        "Armando Faz <armfazh@cloudflare.com>"
    ],
    "license": "BSD-3-Clause",
    "private": false,
    "main": "./lib-cjs/index.js",
    "module": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./lib-cjs/index.js",
            "types": "./lib/index.d.ts",
            "default": "./lib-cjs/index.js"
        }
    },
    "files": [
        "lib/**/*.!(tsbuildinfo)",
        "lib-cjs/**/*.!(tsbuildinfo)"
    ],
    "keywords": [
        "opaque",
        "password",
        "key exchange",
        "crypto",
        "cryptography"
    ],
    "homepage": "https://github.com/cloudflare/opaque-ts#readme",
    "repository": "github:nuvola-digital/opaque-ts",
    "engines": {
        "node": ">=20"
    },
    "devDependencies": {
        "@eslint/js": "9.6.0",
        "@rollup/plugin-commonjs": "26.0.1",
        "@rollup/plugin-node-resolve": "15.2.3",
        "@types/jest": "29.5.12",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-jest": "28.6.0",
        "eslint-plugin-jest-formatting": "3.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-security": "3.0.1",
        "jest": "29.7.0",
        "prettier": "3.3.2",
        "rollup": "4.22.4",
        "typescript": "5.5.3",
        "typescript-eslint": "7.15.0"
    },
    "scripts": {
        "prepack": "tsc -b && tsc -p tsconfig.cjs.json",
        "prepare": "tsc -b && tsc -p tsconfig.cjs.json",
        "build": "tsc -b && tsc -p tsconfig.cjs.json",
        "clean": "tsc -b --clean . test",
        "test": "tsc -b test && node --experimental-vm-modules ./node_modules/jest/bin/jest.js --ci --no-cache",
        "lint": "eslint .",
        "format": "prettier './(src|test)/*.ts' --write",
        "filesbundle": "rollup -c"
    },
    "dependencies": {
        "@cloudflare/voprf-ts": "0.21.2",
        "@noble/hashes": "1.8.0"
    }
}