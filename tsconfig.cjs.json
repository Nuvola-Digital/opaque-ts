{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "lib": [
            "dom"
        ],
        "composite": true,
        "declarationMap": true,
        "sourceMap": true,
        "isolatedModules": true,
        "strict": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./lib-cjs"
    },
    "include": [
        "src/**/*"
    ]
}
